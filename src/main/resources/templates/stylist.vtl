<!--stylist.vtl-->


<h2> All Stylists: </h2>

#if($stylists)
  <p>Click on a stylist's name or picture to see their clients:</p>
  <ul>
    #foreach ($stylist in $stylists)
      <br>
      <li><a href="/stylists/$stylist.getId()">$stylist.getName()</a></li>
      <a href="/stylists/$stylist.getId()"><img height="160" width = "180" style="border: none;" src="$stylist.getImage()"></a>
      <br>
    #end
    <br>
  </ul>
#else
<br>
  <p>There are no stylists yet!</p>
#end

<h2>New Stylist:</h2>

<form action="/stylists" method="post">
  <label for="name">Stylist's info</label>
  <input id="name" name="name" type="text">

  <label for="image">Image link</label>
  <input id="image" name="image" type="text" required>

  <button type="submit" class="btn btn-default">Add Stylist!</button>
</form>

<h2>New Client:</h2>

<form action="/clients" method="post">
  <label for="stylistId">Select a Stylist</label>
  <select id='stylistId' name='stylistId' type='text'>
    #foreach($stylist in $stylists)
      <option value="$stylist.getId()">$stylist.getName()</option>
    #end
  </select>

  <div class="form-group">
    <label for="name">New Client info</label>
    <input id="name" name="name" type="text" class="form-control">
  </div>

  <button type="submit" class="btn btn-default">Add new Client!</button>
</form>
<br>
<br>
